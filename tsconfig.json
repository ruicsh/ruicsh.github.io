  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@ruicsh/*": ["./packages/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules/**/*", "**/*/dist/*"]
}