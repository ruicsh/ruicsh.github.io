{
	"compilerOptions": {
		"noEmit": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@ruicsh/*": ["./packages/*"]
		},
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
		"types": ["vitest/globals"]
	},
	"exclude": ["node_modules/**/*", "**/*/dist/*"]
}
